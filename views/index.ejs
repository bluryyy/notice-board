<!-- Incluir o Head -->
<%- include('./partials/head') %>

  <body>

    <!-- Menu -->
    <%- include('./partials/navbar') %>
    
    <div class="container">

      <% avisos.forEach(aviso => { %>
        <br><br>  

        <div class="card shadow">
            <div class="card-header bg-blue text-white pl-5 p-4 d-flex align-items-center justify-content-between">
              <h2><span class="material-icons">
                assignment_late
                </span>  <%= aviso.titulo %> </h2>
                <h3 class="lead"><%= moment(aviso.data).format("DD/MM/YYYY") %></h3>
            </div>
            <div class="card-body p-5">
              
              <!-- Info Perfil -->
              <div class="d-flex align-items-center">
               
                <img src="img/jb.jpg" class="img-thumbnail rounded-circle" width="125">
                <div class="ml-2">
                  <div class="font-weight-bold"> ETEC Jo√£o Belarmino </div>
                  <div class="text-secondary"> <%= moment(aviso.data, "YYYYMMDD").fromNow(); %> </div>
                </div>
              </div>

              <div class="mt-4">
                <%= aviso.mensagem %>
              </div>
            
            </div><!-- Card Body -->
        </div><!-- Card -->

  
      <% }) %>

      <br><br>  

       
    </div><!-- Container -->
    

      <!-- Incluir os Scripts do Bootstrap-->
      <%- include('./partials/scripts_import') %>    
  </body>
</html>
